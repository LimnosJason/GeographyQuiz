<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_user_pic_iv"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:padding="8dp"
        android:src="@drawable/img_contact_logo"
        app:layout_constraintStart_toEndOf="@+id/list_item_position_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_user_name_tv"
        android:layout_width="192dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="User Name"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_item_user_pic_iv"
        app:layout_constraintTop_toTopOf="@+id/list_item_user_pic_iv" />

    <TextView
        android:id="@+id/list_item_position_tv"
        android:layout_width="62dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_user_score_tv"
        android:layout_width="62dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="17"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>