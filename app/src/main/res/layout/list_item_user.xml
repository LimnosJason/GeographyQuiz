<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_user_pic_iv"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_contact_logo" />

    <TextView
        android:id="@+id/list_item_user_name_tv"
        android:layout_width="306dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="User Name"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_item_user_pic_iv"
        app:layout_constraintTop_toTopOf="@+id/list_item_user_pic_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>